{
  "name": "subs-tracker",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "bumpp && bun run changelog && git add CHANGELOG.md && git commit --amend --no-edit && git push --follow-tags",
    "release:minor": "bumpp minor && bun run changelog && git add CHANGELOG.md && git commit --amend --no-edit && git push --follow-tags",
    "release:major": "bumpp major && bun run changelog && git add CHANGELOG.md && git commit --amend --no-edit && git push --follow-tags",
    "release:dry": "bumpp --no-commit --no-tag --no-push"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.5",
    "@tailwindcss/vite": "^4.1.18",
    "hono": "^4.11.0",
    "lucide": "^0.562.0",
    "resend": "^6.6.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/bun": "^1.3.4",
    "bumpp": "^10.3.2",
    "conventional-changelog-cli": "^5.0.0",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "simple-git-hooks": "^2.13.1",
    "typed-htmx": "^0.3.1",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.54.0"
  }
}
